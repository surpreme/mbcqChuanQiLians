<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.allwriteoffpayment.commonwriteoffinfo.CommonWriteOffInfoActivity">
    <com.mbcq.baselibrary.view.CnToolbar
        android:id="@+id/common_writeoff_info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/base_blue"
        app:backButtonIsShow="true"
        app:centerTextViewText="详情"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/write_off_info_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/common_writeoff_info_toolbar">

        <TextView
            android:id="@+id/write_off_info_left_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingExtra="10dp"
            tools:text="核销日期：2020-11-11\n核 销  人：吴轩\n收 款  人：林仙"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/write_off_info_right_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingExtra="10dp"
            tools:text="核销状态：已收款\n核销网点：义乌青口\n收款方式：现金"
            android:textColor="@color/black"
            android:textSize="17sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/waybill_info_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/write_off_info_ll">

        <TextView
            android:id="@+id/waybill_info_left_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingExtra="10dp"
            tools:text="运 单  号：10056044123\n开单日期:2020-11-11 12:12\n发货网点：汕头\n发 货  人：吴轩\n件      数：111\n体      积：23m³\n业 务  员：吴轩\n现      付：1000 \n少收/赔款：100\n异地原因：\n备      注："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/waybill_info_right_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingExtra="10dp"
            tools:text="状      态：已入库\n货物名称：电脑\n到货网点：义乌青口\n收 货  人：林仙\n重      量：1000kg\n包     装：纸箱\n制 单 人：吴轩\n增 加  款：100\n异地其他费：200"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/back_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/base_blue"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>