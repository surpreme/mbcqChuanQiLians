<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0.9"
    android:background="@color/base_grayDark"
    android:paddingLeft="10dp"
    tools:context="com.mbcq.orderlibrary.fragment.waybillinformation.WaybillInformationFixedTableAdapter">

    <TextView
        android:id="@+id/modify_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left"
        android:minHeight="30dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="修改内容" />

    <View
        android:id="@+id/line1"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/before_modify_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left"
        android:minHeight="30dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="旧信息" />

    <View
        android:id="@+id/line2"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="@color/white" />

    <TextView
        android:id="@+id/end_modify_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left"
        android:minHeight="30dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="新信息" />


</LinearLayout>

